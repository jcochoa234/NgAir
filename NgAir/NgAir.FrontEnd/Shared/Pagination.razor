﻿<nav>
    <ul class="pagination">
        @foreach (var link in links)
        {
            <li @onclick=@(() => InternalSelectedPageNumber(link))
                style="cursor: pointer"
                class="page-item @(link.Enable ? null : "disabled") @(link.Enable ? "active" : null)">
                <a class="page-link">@link.Text</a>
            </li>
        }
        <li class="mx-2">
            <select class="form-select custom-select" @onchange="InternalPageSizeSelected">
                @foreach (var option in options)
                {
                    <option value="@option.Value">@option.Name</option>
                }
            </select>
        </li>
    </ul>
</nav>